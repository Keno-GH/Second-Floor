<Defs>
  <!-- Base staircase definition -->
  <ThingDef Abstract="True" Name="StaircaseBase" ParentName="BedWithQualityBase">
    <tickerType>Normal</tickerType>
    <uiIconScale>1</uiIconScale>
    <uiOrder>2405</uiOrder>
    <building>
      <ai_neverTrashThis>true</ai_neverTrashThis>
      <paintable>true</paintable>
      <bed_showSleeperBody>False</bed_showSleeperBody>
      <bed_healPerDay>4</bed_healPerDay>
      <bed_caravansCanUse>false</bed_caravansCanUse>
    </building>
    <fillPercent>0.8</fillPercent>
    <pathCost>70</pathCost>
    <castEdgeShadows>False</castEdgeShadows>
    <interactionCellOffset>(2,2,2)</interactionCellOffset>
    <staticSunShadowHeight>0</staticSunShadowHeight>
    <minifiedDef>MinifiedThing</minifiedDef>
    <drawGUIOverlay>True</drawGUIOverlay>
    <defaultPlacingRot>South</defaultPlacingRot>
    <blockLight>false</blockLight>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <inspectorTabs>
      <li>SecondFloor.ITab_Staircase</li>
    </inspectorTabs>
  </ThingDef>

  <!-- Upstairs staircase -->
  <ThingDef ParentName="StaircaseBase">
    <defName>SF_Upstairs</defName>
    <label>Upstairs</label>
    <description>A staircase leading to an upper floor with a single bedroom (2 bedspaces). It can be updated with better accommodations and more rooms.</description>
    <graphicData>
      <texPath>Things/Building/22staircase/22staircase</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,4)</drawSize>
      <drawRotated>false</drawRotated>
    </graphicData>
    <uiIconPath>Icons/Bedrooms/DecentFour</uiIconPath>
    <size>(2,2)</size>
    <holdsRoof>true</holdsRoof>
    <blockWind>true</blockWind>
    <techLevel>Medieval</techLevel>
    <modExtensions>
      <li Class="SecondFloor.SecondFloorModExtension">
        <RemoveSoakingWet>true</RemoveSoakingWet>
        <ideologySecondFloorAssignmentAllowed>true</ideologySecondFloorAssignmentAllowed>
        <RemoveSleptOutside>true</RemoveSleptOutside>
      </li>
    </modExtensions>
    <statBases>
      <MaxHitPoints>600</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>4</Beauty>
      <BeautyOutdoors>6</BeautyOutdoors>
      <WorkToBuild>100000</WorkToBuild>
      <Mass>400</Mass>
      <BedRestEffectiveness>0.9</BedRestEffectiveness>
      <Comfort>.8</Comfort>
      <ImmunityGainSpeedFactor>1.07</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
      <MedicalTendQualityOffset>0.10</MedicalTendQualityOffset>
      <BirthRitualQualityOffset MayRequire="Ludeon.RimWorld.Biotech">2</BirthRitualQualityOffset>
    </statBases>
    <researchPrerequisites>
      <li>SF_Upstairs</li>
    </researchPrerequisites>
    <costStuffCount>200</costStuffCount>
    <stuffCategories>
      <li>Woody</li>
      <li>Metallic</li>
    </stuffCategories>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <comps>
      <li Class="SecondFloor.CompProperties_GiveThoughtStairs">
        <thoughtDef>SF_Decent_Quality_Room</thoughtDef>
      </li>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li MayRequire="Ludeon.RimWorld.Ideology">SleepAccelerator</li>
        </linkableFacilities>
      </li>
      <li>
        <compClass>SecondFloor.CompAssignBedHediff</compClass>
      </li>
      <li Class="SecondFloor.CompProperties_StaircaseUpgrades" />
      <li Class="SecondFloor.CompProperties_MultipleBeds">
        <bedCount>2</bedCount>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>0</fuelConsumptionRate>
        <fuelCapacity>50.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
            <li>Chemfuel</li>
          </thingDefs>
        </fuelFilter>
        <initialFuelPercent>0</initialFuelPercent>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>false</shortCircuitInRain>
        <basePowerConsumption>0</basePowerConsumption>
      </li>
    </comps>
    <placeWorkers>
      <li>SecondFloor.PlaceWorkerIndoors</li>
      <li>SecondFloor.PlaceWorkerUnderRoof</li>
      <li>SecondFloor.PlaceWorkerOnlyOneSFPerRoom</li>
      <li>SecondFloor.PlaceWorkerInSmallRoom</li>
    </placeWorkers>
  </ThingDef>

  <!-- Basement staircase -->
  <ThingDef ParentName="StaircaseBase">
    <defName>SF_Basement</defName>
    <label>Basement</label>
    <description>A small staircase leading to a basement floor</description>
    <graphicData>
      <texPath>Things/Building/22staircase_down/22staircase_down</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,4)</drawSize>
      <drawRotated>false</drawRotated>
    </graphicData>
    <uiIconPath>Icons/Bedrooms/CheapBasementTwo</uiIconPath>
    <size>(2,2)</size>
    <holdsRoof>false</holdsRoof>
    <blockWind>false</blockWind>
    <techLevel>Neolithic</techLevel>
    <modExtensions>
      <li Class="SecondFloor.SecondFloorModExtension">
        <RemoveSoakingWet>true</RemoveSoakingWet>
        <RemoveSleptOutside>true</RemoveSleptOutside>
        <ideologySecondFloorAssignmentAllowed>true</ideologySecondFloorAssignmentAllowed>
      </li>
    </modExtensions>
    <statBases>
      <MaxHitPoints>450</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>2</Beauty>
      <BeautyOutdoors>2</BeautyOutdoors>
      <WorkToBuild>20000</WorkToBuild>
      <Mass>400</Mass>
      <BedRestEffectiveness>1</BedRestEffectiveness>
      <Comfort>.6</Comfort>
      <ImmunityGainSpeedFactor>1.10</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
      <MedicalTendQualityOffset>0.00</MedicalTendQualityOffset>
      <BirthRitualQualityOffset MayRequire="Ludeon.RimWorld.Biotech">2</BirthRitualQualityOffset>
    </statBases>
    <researchPrerequisites>
      <li>SF_Downstairs</li>
    </researchPrerequisites>
    <costStuffCount>200</costStuffCount>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <comps>
      <li Class="SecondFloor.CompProperties_GiveThoughtStairs">
        <thoughtDef>SF_Low_Quality_Basement</thoughtDef>
      </li>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li MayRequire="Ludeon.RimWorld.Ideology">SleepAccelerator</li>
        </linkableFacilities>
      </li>
      <li>
        <compClass>SecondFloor.CompAssignBedHediff</compClass>
      </li>
      <li Class="SecondFloor.CompProperties_StaircaseUpgrades" />
      <li Class="SecondFloor.CompProperties_MultipleBeds">
        <bedCount>2</bedCount>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>0</fuelConsumptionRate>
        <fuelCapacity>60.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
            <li>Chemfuel</li>
          </thingDefs>
        </fuelFilter>
        <initialFuelPercent>0</initialFuelPercent>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
    </comps>
    <placeWorkers>
      <li>SecondFloor.PlaceWorkerIndoors</li>
      <li>SecondFloor.PlaceWorkerOnlyOneBSPerRoom</li>
      <li>SecondFloor.PlaceWorkerInSmallRoom</li>
    </placeWorkers>
  </ThingDef>

</Defs>